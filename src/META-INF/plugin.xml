<idea-plugin version="3">
  <id>com.eugeny.instacode.idea</id>
  <name>Post to Instacode</name>
  <version>1.2</version>
  <vendor email="e@ajenti.org" url="http://instacod.es">Instacode</vendor>

  <description><![CDATA[
      Lets you post code snippets to <a href="http://instacod.es">instacod.es</a>
      ]]></description>

  <change-notes><![CDATA[
      ]]>
  </change-notes>

  <idea-version since-build="107.105"/>

  <depends>com.intellij.modules.lang</depends>

  <application-components />

  <project-components />

  <actions>
    <!-- Add your actions here -->
      <action id="InstacodePost" class="com.eugeny.instacode.idea.InstacodePostAction" text="Post to _Instacode"
              description="Post selection to instacod.es">
          <add-to-group group-id="ToolsMenu" anchor="last"/>
          <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl alt I"/>
      </action>
  </actions>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>
</idea-plugin>
